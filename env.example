# Configuración del Frontend
# Copia este archivo a .env.local para desarrollo

# URL de la API Backend
VITE_API_BASE_URL=http://localhost:5000/api

# URL de la API para producción (cambiar por tu servidor)
VITE_API_BASE_URL_PROD=https://tu-servidor.com/api

# Base pública para archivos estáticos (producción)
# Ejemplo si el backend NO comparte dominio con el frontend:
# VITE_UPLOADS_BASE_URL=http://localhost:5000

# Configuración de Firebase (si usas Firebase en el frontend)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Configuración de la aplicación
VITE_APP_NAME=Barbershop
VITE_APP_VERSION=1.0.0
